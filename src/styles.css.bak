/* 10. ANIMATIONS (SUBTLE)
   ======================= */

.sf-fade-in {
  animation: sf-fade-in 260ms var(--sf-ease) forwards;
}

@keyframes sf-fade-in {
  from {
    opacity: 0;
    transform: translateY(4px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.sf-slide-up {
  animation: sf-slide-up 300ms var(--sf-ease) forwards;
}

@keyframes sf-slide-up {
  from {
    opacity: 0;
    transform: translateY(8px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}


