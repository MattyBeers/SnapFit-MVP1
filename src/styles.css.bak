/* 9. NAV / TAB-LIKE BOTTOM BAR (OPTIONAL)
   ====================================== */

.sf-bottom-nav {
  position: sticky;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 10px 0 6px;
  background: linear-gradient(
    to top,
    rgba(15, 23, 42, 0.96),
    rgba(15, 23, 42, 0.75),
    transparent
  );
  backdrop-filter: blur(24px);
}

.sf-bottom-nav-inner {
  max-width: 480px;
  margin: 0 auto;
  padding: 6px 12px;
  border-radius: 999px;
  border: 1px solid rgba(148, 163, 184, 0.25);
  background: radial-gradient(circle at top left, rgba(34, 211, 238, 0.2), transparent),
              radial-gradient(circle at bottom right, rgba(249, 115, 22, 0.18), transparent),
              rgba(15, 23, 42, 0.96);
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.sf-nav-item {
  flex: 1;
  text-align: center;
  font-size: 11px;
  color: var(--sf-text-muted);
  padding: 6px 0;
  cursor: pointer;
  border-radius: 999px;
  transition:
    color var(--sf-duration-fast) var(--sf-ease),
    background var(--sf-duration-fast) var(--sf-ease),
    transform var(--sf-duration-fast) var(--sf-ease);
}

.sf-nav-item--active {
  color: #f9fafb;
  background: rgba(15, 23, 42, 0.9);
  transform: translateY(-1px);
}
/* Design tokens (light theme) */
:root {
  --sf-bg: #f7fafc;
  --sf-bg-elevated: #ffffff;
  --sf-bg-soft: #f3f7fb;
  --sf-surface: #ffffff;
  --sf-surface-subtle: #fbfdff;
  --sf-border-subtle: rgba(2, 6, 23, 0.06);

  --sf-primary-start: #56d586;
  --sf-primary-end: #00b7e6;
  --sf-primary-soft: linear-gradient(135deg, rgba(86,213,134,0.12), rgba(0,183,230,0.08));

  --sf-accent: #00aaff;
  --sf-accent-soft: rgba(0, 170, 255, 0.08);

  --sf-text-main: #081126;
  --sf-text-muted: #56687a;
  --sf-text-soft: #8b98a6;
  --sf-text-on-dark: #081126;

  --sf-danger: #ff6b6b;
  --sf-success: #34c38f;

  --sf-radius-xl: 20px;
  --sf-radius-lg: 14px;
  --sf-radius-md: 8px;
  --sf-radius-pill: 999px;
  --sf-shadow-soft: 0 8px 24px rgba(9, 20, 34, 0.06);
  --sf-shadow-subtle: 0 6px 18px rgba(9, 20, 34, 0.05);

  --sf-ease: cubic-bezier(0.22, 0.61, 0.36, 1);
  --sf-duration-fast: 140ms;
  --sf-duration-base: 200ms;
}

/* 3. APP SHELL
   ============ */

.sf-app {
  min-height: 100vh;
  background:
    radial-gradient(circle at 0% 0%, rgba(86, 213, 134, 0.06), transparent 55%),
    radial-gradient(circle at 100% 100%, rgba(0, 183, 230, 0.04), transparent 60%),
    var(--sf-bg);
  color: var(--sf-text-main);
}

/* Centered app container */
.sf-shell {
  max-width: 480px;
  margin: 0 auto;
  padding: 16px;
}

/* Top app title / logo row */
.sf-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
  margin-bottom: 16px;
}

.sf-header-logo {
  display: flex;
  align-items: center;
  gap: 8px;
}

.sf-logo-mark {
  width: 26px;
  height: 26px;
  border-radius: 9px;
  background: radial-gradient(circle at 20% 20%, #f97316, #f97316 40%, #0ea5e9 100%);
  box-shadow: 0 0 25px rgba(249, 115, 22, 0.5);
}

.sf-logo-text {
  font-weight: 700;
  letter-spacing: 0.02em;
  text-transform: none;
  font-size: 15px;
  color: var(--sf-text-on-dark);
  font-family: "Poppins", system-ui, sans-serif;
}

/* Minimal top-right actions */
.sf-header-actions {
  display: flex;
  gap: 8px;
  align-items: center;
  font-size: 12px;
  color: var(--sf-text-soft);
}

/* 4. TYPOGRAPHY HELPERS
   ===================== */

.sf-title-lg {
  font-size: 22px;
  font-weight: 700;
  letter-spacing: 0.01em;
}

.sf-subtitle {
  font-size: 13px;
  color: var(--sf-text-soft);
}

.sf-section-title {
  font-size: 16px;
  border-radius: 999px;
  position: relative;
  transition:
    color var(--sf-duration-fast) var(--sf-ease),
    transform var(--sf-duration-fast) var(--sf-ease),
    box-shadow var(--sf-duration-fast) var(--sf-ease);
  will-change: transform, box-shadow;
}

/* animated underline/highlight */
.sf-nav-item::after {
  content: "";
  position: absolute;
  left: 50%;
  bottom: 6px;
  transform: translateX(-50%);
  width: 0;
  height: 4px;
  background: linear-gradient(90deg, var(--sf-primary-start), var(--sf-primary-end));
  border-radius: 999px;
  transition: width 220ms var(--sf-ease), opacity 180ms var(--sf-ease);
  opacity: 0;
  font-size: 11px;

.sf-nav-item:hover {
  color: var(--sf-text-main);
  transform: translateY(-2px) scale(1.02);
  box-shadow: 0 6px 18px rgba(6,24,45,0.06);
}

.sf-nav-item:hover::after {
  width: 36px;
  opacity: 1;
}

.sf-nav-item--active {
  color: var(--sf-text-main);
  transform: translateY(-2px);
}

.sf-nav-item--active::after {
  width: 44px;
  opacity: 1;
}

/* subtle ripple on click (prefers-reduced-motion excluded) */
@media (prefers-reduced-motion: no-preference) {
  .sf-nav-item:active {
    transform: translateY(0) scale(0.995);
    transition: transform 90ms ease;
  }
/* 5. CARDS & SURFACES
   =================== */

.sf-card {
  background: var(--sf-surface);
  border-radius: var(--sf-radius-lg);
  border: 1px solid var(--sf-border-subtle);
  padding: 14px 16px;
  box-shadow: var(--sf-shadow-soft);
  backdrop-filter: blur(6px);
}

.sf-card-subtle {
  background: var(--sf-surface-subtle);
  border-radius: var(--sf-radius-md);
  border: 1px solid rgba(148, 163, 184, 0.2);
  padding: 10px 12px;
}

.sf-pill {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  padding: 4px 10px;
  border-radius: var(--sf-radius-pill);
  font-size: 11px;
  border: 1px solid rgba(148, 163, 184, 0.35);
  color: var(--sf-text-muted);
}


/* 6. BUTTONS
   ========== */

.sf-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
  padding: 9px 16px;
  font-size: 13px;
  font-weight: 500;
  border-radius: var(--sf-radius-pill);
  border: 1px solid transparent;
  background: var(--sf-surface);
  color: var(--sf-text-main);
  cursor: pointer;
  transition:
    background var(--sf-duration-base) var(--sf-ease),
    transform var(--sf-duration-base) var(--sf-ease),
    box-shadow var(--sf-duration-base) var(--sf-ease),
    border-color var(--sf-duration-base) var(--sf-ease);
}

.sf-btn-primary {
  background: linear-gradient(135deg, var(--sf-primary-start), var(--sf-primary-end));
  color: #042034;
  box-shadow: 0 8px 28px rgba(6, 24, 45, 0.08);
}

.sf-btn-primary:hover {
  transform: translateY(-1px);
  box-shadow: 0 10px 30px rgba(6, 24, 45, 0.12);
}

.sf-btn-outline {
  background: transparent;
  border-color: rgba(148, 163, 184, 0.4);
  color: var(--sf-text-main);
}

.sf-btn-outline:hover {
  background: rgba(15, 23, 42, 0.95);
  border-color: rgba(148, 163, 184, 0.7);
}

.sf-btn-ghost {
  background: transparent;
  border-radius: var(--sf-radius-pill);
  color: var(--sf-text-soft);
  border: none;
}

.sf-btn-ghost:hover {
  background: rgba(15, 23, 42, 0.7);
}

.sf-btn-full {
  width: 100%;
}

/* small button */
.sf-btn-sm {
  padding: 6px 12px;
  font-size: 12px;
}


/* 7. INPUTS & FORMS
   ================= */

.sf-input-group {
  display: flex;
  flex-direction: column;
  gap: 4px;
  margin-bottom: 10px;
}

.sf-label {
  font-size: 11px;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  color: var(--sf-text-muted);
}

.sf-input,
.sf-select {
  width: 100%;
  padding: 10px 12px;
  border-radius: var(--sf-radius-md);
  border: 1px solid rgba(9,20,34,0.06);
  background: var(--sf-surface);
  color: var(--sf-text-main);
  font-size: 13px;
  outline: none;
  box-shadow: none;
  transition:
    border-color var(--sf-duration-fast) var(--sf-ease),
    box-shadow var(--sf-duration-fast) var(--sf-ease),
    background var(--sf-duration-fast) var(--sf-ease);
}

.sf-input::placeholder {
  color: var(--sf-text-soft);
}

.sf-input:focus,
.sf-select:focus {
  border-color: var(--sf-accent);
  box-shadow: 0 0 0 1px rgba(34, 211, 238, 0.5);
  background: rgba(15, 23, 42, 0.98);
}

.sf-input-inline-row {
  display: flex;
  gap: 8px;
}


/* 8. SIMPLE LAYOUT UTILS
