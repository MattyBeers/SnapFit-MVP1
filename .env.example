# SnapFit Environment Variables
# Copy this to .env and fill in your values

# ====================
# SUPABASE (Required)
# ====================
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# ====================
# MONGODB (Required)
# ====================
VITE_API_URL=http://localhost:3001
MONGODB_URI=your_mongodb_atlas_connection_string

# ====================
# OPENAI (Optional - For AI Analysis)
# ====================
VITE_OPENAI_API_KEY=sk-your_openai_api_key
# Used for: Clothing item analysis, style recommendations
# Get key: https://platform.openai.com/api-keys
# Cost: ~$0.01-0.03 per image analysis

# ====================
# BACKGROUND REMOVAL (Choose One)
# ====================

# Option 1: Hugging Face - FREE (Recommended for MVP/Testing)
VITE_HUGGINGFACE_API_KEY=hf_your_huggingface_token
# Get token: https://huggingface.co/settings/tokens
# Model: briaai/RMBG-1.4 (free, unlimited)
# Quality: Excellent for fashion/clothing
# Speed: 5-10 seconds per image

# Option 2: Remove.bg - PAID (Best for Production)
VITE_REMOVEBG_API_KEY=your_removebg_api_key
# Get key: https://www.remove.bg/api
# Cost: $0.20 per image (or subscription)
# Quality: Best in class
# Speed: 3-5 seconds per image

# Note: System will try Remove.bg first (if key present), 
# then Hugging Face, then fall back to local processing

# ====================
# CANVA (Optional - For VFR Backgrounds)
# ====================
VITE_CANVA_API_KEY=your_canva_api_key
# Get key: https://www.canva.com/developers/
# Used for: Custom VFR backgrounds, design templates
# Status: Coming soon (Phase 2)

# ====================
# STRIPE (Optional - For Monetization)
# ====================
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# Get keys: https://dashboard.stripe.com/apikeys
# Used for: Wishlist affiliate tracking, premium features
# Status: Coming soon (Phase 2)

# ====================
# ANALYTICS (Optional)
# ====================
VITE_ANALYTICS_ID=your_analytics_id
# Google Analytics, Mixpanel, or PostHog
# Status: Optional for launch

# ====================
# FEATURE FLAGS
# ====================
VITE_ENABLE_AI_ANALYSIS=true
VITE_ENABLE_BACKGROUND_REMOVAL=true
VITE_ENABLE_3D_VFR=false  # Set to true when 3D VFR is ready
VITE_ENABLE_WISHLIST_SHARING=false  # Phase 2
VITE_ENABLE_SOCIAL_FEATURES=true

# ====================
# DEVELOPMENT
# ====================
NODE_ENV=development
VITE_APP_NAME=SnapFit
VITE_APP_VERSION=0.1.0

# ====================
# SCRAPING / PROXY (Optional for demos)
# ====================
# Provider: scrapingbee or scraperapi
SCRAPING_PROVIDER=scrapingbee
# Your ScrapingBee or ScraperAPI API key (do NOT commit the real key)
SCRAPING_API_KEY=
# Optional HTTP proxy for fetch fallback (e.g. http://user:pass@proxy.example:8000)
SCRAPER_PROXY=
# Scraper tuning
SCRAPER_MAX_ATTEMPTS=3
SCRAPER_TIMEOUT_MS=10000
