# Backend .env (paste into Render backend "Add from .env")
# Replace placeholders with real secret values. Do NOT commit real secrets to git.

MONGODB_URI=mongodb+srv://<DB_USER>:<DB_PASSWORD>@snapfit-cluster.mcrmx2w.mongodb.net/snapfit?retryWrites=true&w=majority&appName=SnapFit-Cluster
MONGODB_DB_NAME=snapfit

# Supabase (server can read anon key; do NOT put service_role key in client)
SUPABASE_URL=https://<your-supabase-project>.supabase.co
SUPABASE_ANON_KEY=<supabase-anon-key>

# Third-party API keys (server-only)
OPENAI_API_KEY=<openai-key>
REMOVEBG_API_KEY=<removebg-key>
HUGGINGFACE_API_KEY=<huggingface-key>

# Scraper config
SCRAPING_PROVIDER=<provider-name>
SCRAPING_API_KEY=<scraping-api-key>

# Server config
CORS_ORIGIN=https://<your-frontend>.onrender.com
NODE_ENV=production
PORT=3001
